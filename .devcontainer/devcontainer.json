{
  "name": "Food Finder Application",
  "dockerComposeFile": "docker-compose.yml",
  "service": "backend",  // Ensure this matches the correct service in your docker-compose.yml
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [3000, 27017],
  "postCreateCommand": "apt-get update && apt-get install -y docker.io docker-compose",
  "postStartCommand": "dockerd &"
}
